<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- GPS 매크로 정의 -->
  <xacro:macro name="gps_sensor" params="parent">
    
    <!-- GPS 센서 링크 정의 -->
    <link name="gps_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
        <material name="gps_material">
          <color rgba="0.2 0.2 0.8 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <!-- GPS 센서를 parent에 조인트로 연결 -->
    <joint name="gps_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="gps_link"/>
      <!-- Husky 뒤쪽 상단에 GPS 센서 위치 -->
      <origin xyz="-0.3 0 0.3" rpy="0 0 0"/>
    </joint>
  
  </xacro:macro>
</robot>